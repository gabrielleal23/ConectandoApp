<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:backgroundTint="@android:color/white"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

    <TextView
        android:id="@+id/tvPuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puesto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1A237E" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horario"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvPagoHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pago por Hora"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvRequisitos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requisitos"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="Aceptar"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_gradiente"
        android:backgroundTint="@color/neon_boton_secundario" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>