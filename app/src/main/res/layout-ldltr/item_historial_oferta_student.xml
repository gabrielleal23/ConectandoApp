<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_marginBottom="8dp"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tvPuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PUESTO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción" />

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubicación" />

    <TextView
        android:id="@+id/tvHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horario" />

    <TextView
        android:id="@+id/tvPagoHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pago por hora" />



    <TextView
        android:id="@+id/tvEstadohis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado" />

    <TextView
        android:id="@+id/calificacionoffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificacion:" />

    <RatingBar
        android:id="@+id/ratingOferta"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:theme="@style/Widget.AppCompat.RatingBar.Small" />

</LinearLayout>